        to contribute now.
      </div>
    <% end %>
    <% sign_count = sign_count + 1 %>
  <% end %>

  <% if comp_count == 0 %>
    <div class="text-gray small text-center" style="padding-bottom: 1em;">
      <%= link_to "Who's winning CASH?", competition_path, class: "text-yellow" %>
    </div>
  <% end %>
  <% comp_count = comp_count + 1 %>

